# 复制为 secret.yaml 并填入实际值，然后：kubectl apply -f secret.yaml
# 或使用 kubectl create secret 命令创建
apiVersion: v1
kind: Secret
metadata:
  name: kam-admin-server-secret
  namespace: kam-admin
  labels:
    app: kam-admin-server
type: Opaque
stringData:
  # 数据库（MySQL 示例）
  SPRING_DATASOURCE_URL: "jdbc:mysql://mysql:3306/kamailio?useUnicode=true&characterEncoding=utf8"
  SPRING_DATASOURCE_USERNAME: "kamailio"
  SPRING_DATASOURCE_PASSWORD: "CHANGE_ME"
  # Redis 密码（若无则留空）
  REDIS_PASSWORD: ""
  # PostgreSQL 示例（与 MySQL 二选一，ConfigMap 中改 SPRING_PROFILES_ACTIVE=postgres）
  # SPRING_DATASOURCE_URL: "jdbc:postgresql://postgres:5432/kamailio"
  # SPRING_DATASOURCE_USERNAME: "kamailio"
  # SPRING_DATASOURCE_PASSWORD: "CHANGE_ME"
